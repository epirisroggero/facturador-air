				var convertRemObj:RemoteObject = DocumentosUtils.getNewRemoteObject(false);
				convertRemObj.addEventListener(FaultEvent.FAULT, handleFault);
				convertRemObj.addEventListener(ResultEvent.RESULT, function(evt:ResultEvent):void {
					gasto = evt.result as Documento;
					currentState = "default";
					_convirtiendo = false;
				});
					
				if (_documento.comprobante.codigo == '110') {
					currentState = "cargando";
					_convirtiendo = true;
					
					convertRemObj.convertirDocumento(_documento, "111", GeneralOptions.getInstance().usarCajaPrincipal);
					
				} else if (_documento.comprobante.codigo == '111' || _documento.comprobante.codigo == '116') {
					convertirMS2Factura(_documento, _documento.comprobante.nombre);
				} 
			}			
			
			private function convertirMS2Factura(doc:Documento, title:String = null):void {
				helpWindow = new TitleWindow();
				helpWindow.title = "Convertir" + " '" + title + "'";
				helpWindow.height = 420;
				helpWindow.visible = true;
				
				var convertPnl:SeleccionarTipoGasto = new SeleccionarTipoGasto();
				convertPnl.hideComprobante = doc.comprobante.codigo;
				
				convertPnl.showComprobanteTipo = 
					(_documento.comprobante.codigo == '111' ? [Comprobante.COMPRA_CREDITO, Comprobante.COMPRA_CONTADO] : 
					(_documento.comprobante.codigo == '116' ? [Comprobante.NOTA_CREDITO_COMPRA, Comprobante.DEVOLUCION_COMPRA_CONTADO] : [])) ;
				
				var moneda:Moneda = cmbMoney.selectedItem as Moneda;
				convertPnl.filter = (moneda.nombre.indexOf("*") <= 0) ? "noaster" : "aster";
				
				helpWindow.addEventListener(CloseEvent.CLOSE, function(event:Event):void {
					helpWindow.removeEventListener(CloseEvent.CLOSE, closeHandlerConvert);
					PopUpManager.removePopUp(helpWindow as IFlexDisplayObject);
					helpWindow = null;
				});
				convertPnl.addEventListener(CloseEvent.CLOSE, function(event:Event):void {
					helpWindow.removeEventListener(CloseEvent.CLOSE, closeHandlerConvert);
					PopUpManager.removePopUp(helpWindow as IFlexDisplayObject);
					helpWindow = null;
				});
				convertPnl.addEventListener("accept_", resultConvertirDocumento);
				
				helpWindow.addElement(convertPnl);
				PopUpManager.addPopUp(helpWindow, parentApplication.owner, true);
				PopUpManager.centerPopUp(helpWindow);
				
			}
			
			private function resultConvertirDocumento(event:Event):void {
				var convertPnl:SeleccionarTipoGasto = event.target as SeleccionarTipoGasto;
				
				currentState = "cargando";
				_convirtiendo = true;
				
				var comprobante:Comprobante = convertPnl.tipoFactura as Comprobante;
				var codigo:String = comprobante.codigo;
				
				var convertRemObj:RemoteObject = DocumentosUtils.getNewRemoteObject(false);
				convertRemObj.addEventListener(FaultEvent.FAULT, handleFault);
				convertRemObj.addEventListener(ResultEvent.RESULT, function(evt:ResultEvent):void {
					gasto = evt.result as Documento;
					currentState = "default";
					_convirtiendo = false;
				});
				convertRemObj.convertirDocumento(_documento, codigo, GeneralOptions.getInstance().usarCajaPrincipal);
				
				helpWindow.removeEventListener(CloseEvent.CLOSE, closeHandlerConvert);
				PopUpManager.removePopUp(helpWindow as IFlexDisplayObject);
				helpWindow = null;
			}
			
			private function closeHandlerConvert(event:Event):void {
				helpWindow.removeEventListener(CloseEvent.CLOSE, closeHandlerConvert);
				PopUpManager.removePopUp(helpWindow as IFlexDisplayObject);
				helpWindow = null;
				
				currentState = "default";
				_convirtiendo = false;
			}
			
			protected function cmbMoney_changeHandler(event:Event):void {
				var moneda:Moneda = cmbMoney.selectedItem as Moneda;
				
				var monedaAster:Boolean = moneda.nombre.indexOf("*") > 0;

				_documento.comprobante.aster = monedaAster;
			}
			
			public function handleFault(event:FaultEvent):void {
				var message:String = event.fault && event.fault.rootCause && event.fault.rootCause.message ? event.fault.rootCause.message : null;
				if (!message) {
					message = event.message.toString();
				}				
				Alert.show(message, "Error", 4, null, null, StyleManager.getStyleManager(null).getStyleDeclaration('.icons32').getStyle('ErrorIcon'));
				
				running = false;
				_convirtiendo = false;
				currentState = "default";
			}
			

			protected function cmbCentroCostoTMP_changeHandler(event:Event):void{
				var cc:CentrosCosto = cmbCentroCostoTMP.selectedItem as CentrosCosto;
				_documento.docCenCostosId = cc ? cc.codigo : "";
			}
			
			
			
			protected function cmdDuplicar_clickHandler(event:MouseEvent):void {
				var cloneRemObj:RemoteObject = DocumentosUtils.getNewRemoteObject(false);
				cloneRemObj.addEventListener(FaultEvent.FAULT, handleFault);
				cloneRemObj.addEventListener(ResultEvent.RESULT, function(evt:ResultEvent):void {
					gasto = evt.result as Documento;
					currentState = "default";
				});
				cloneRemObj.clonarDocumento(_documento);
			}
			
		]]>
		
