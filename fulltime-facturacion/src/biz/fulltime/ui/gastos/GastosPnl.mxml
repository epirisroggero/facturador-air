			private function cargarMonedas():void {
				monedas = new ArrayCollection();
				
				for each (var mda:Moneda in CatalogoFactory.getInstance().monedas) {
					var monedaAster:Boolean = mda.nombre.indexOf("*") > 0;
					if (_documento.comprobante.codigo == "110" || _documento.comprobante.codigo == "111" || _documento.comprobante.codigo == "116") {
						monedas.addItem(mda);
						
					} else if (_documento.comprobante.aster) {
						if (monedaAster) {
							monedas.addItem(mda);
						}
					} else {
						if (!monedaAster) {
							monedas.addItem(mda);
						}
					}
				}
				fireEvents = false;
				_documento.update();
				fireEvents = true;
				
			}
			
